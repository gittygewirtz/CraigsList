@using CraigsList.Data
@model IndexViewModel

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        @foreach (Post p in Model.Posts)
        {
            <div class="well">                
                <h3>@p.Title</h3>                
                <h4>For more info, call: @p.PhoneNumber</h4>
                <h5>Details:</h5>
                <p>@p.Text</p>
                @if (Model.LoggedIn && p.UserId == Model.UserId)
                {
                    <form method="post" action="/Home/DeletePost">
                        <input type="hidden" name="id" value="@p.Id" />
                        <button class="btn btn-danger">Delete</button>
                    </form>
                }
            </div>
        }
    </div>
</div>